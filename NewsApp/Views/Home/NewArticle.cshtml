@{
  ViewData["Title"] = "Neuer Artikel";
}

@model Article

<h3 class="fw-bolder bg-dark text-center text-white">Neuer Artikel</h3>

<form asp-action="NewArticle" method="post">
  <div class="form-group">
    <label asp-for="Headline"> </label>
    <input asp-for="Headline" class="form-control" />
    <span asp-validation-for="Headline"></span>
  </div>
  <div class="form-group">
    <label asp-for="Content"></label>
    <textarea asp-for="Content" class="form-control" rows="10"></textarea>
    <span asp-validation-for="Content"></span>
  </div>
  <div class="form-group">
    <label asp-for="Author"></label>
    <input asp-for="Author" class="form-control" />
    <span asp-validation-for="Author"></span>
  </div>
  <div class="form-group">
    <label asp-for="ImageFile"></label>
    <select asp-for="ImageFile" asp-items="@((SelectList)ViewData["Images"])" class="form-control">
      <option disabled selected>Select an Image</option>
    </select>
    <span asp-validation-for="ImageFile"></span>
  </div>
  <button type="submit" class="button">Speichern</button>
  <a asp-action="Index" class="btn a">Home</a>
</form>